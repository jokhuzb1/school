{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "src/**/*", "prisma/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["src/__tests__/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
